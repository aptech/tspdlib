proc (2) = __wavelet_transform(y);
    local d1, yt, n1, t1, t2;
    
    t1 = rows(y);
    t2 = 1;
    
    d1 = zeros(t1/2,1);
    yt = zeros(t1/2,1);
    
    
    n1 = 1;
    do while t2<=t1 and n1<=t1/2;
        d1[n1]=(y[t2+1,.]-y[t2,.])/sqrt(2);
        yt[n1]=(y[t2+1,.]+y[t2,.])/sqrt(2);
        t2=t2+2;
        n1=n1+1;
    endo;
    
    retp(d1, yt);
endp;

